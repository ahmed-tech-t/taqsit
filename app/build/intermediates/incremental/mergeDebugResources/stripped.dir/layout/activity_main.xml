<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/layoutBackground"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/layoutBackground"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextTakePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:hint="ثمن السلعة"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="15dp"
        android:background="#bebebe"
        android:gravity="center"
        android:paddingBottom="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutEditText">

        <TableRow>

            <TextView
                android:id="@+id/oneYearNum"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:text="0"
                android:textColor="@color/font1"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/oneYearText"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="سنة"
                android:textColor="@color/font1"
                android:textSize="30dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/oneAndHalfYearNum"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:fontFamily="sans-serif-light"

                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="0"
                android:textColor="@color/font1"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/oneAndHalfYearText"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"

                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="سنة ونصف"
                android:textColor="@color/font1"
                android:textSize="30dp" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/twoYearsNum"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"

                android:text="0"
                android:textColor="@color/font1"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/twoYearsText"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#f1f1f1"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:text="سنتين"
                android:textColor="@color/font1"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTakePrice" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:layout_marginVertical="5dp"
        android:background="#f1f1f1"
        android:paddingBottom="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <Button
                android:id="@+id/bu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"

                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bu3"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif-light"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25dp" />


        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/bu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:layout_marginLeft="5dp"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="5"
                android:fontFamily="sans-serif-light"

                android:textSize="25dp" />

            <Button
                android:layout_marginRight="5dp"

                android:id="@+id/bu6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:text="6"
                android:textSize="25dp" />

        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/bu7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:text="7"
                android:layout_marginLeft="5dp"

                android:textSize="25dp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"

                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:layout_marginRight="5dp"

                android:text="9"
                android:textSize="25dp" />


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/budelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"

                android:text="\u232B"
                android:layout_marginLeft="5dp"

                android:textSize="25dp" />

            <Button
                android:fontFamily="sans-serif-light"
                android:id="@+id/bu0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:fontFamily="sans-serif-light"
                android:layout_marginRight="5dp"

                android:textSize="25dp" />
        </TableRow>

    </TableLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>